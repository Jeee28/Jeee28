using System.Collections;
using System.Collections.Generic;

//create an array list 

ArrayList numbers = new ArrayList();

//add items to array list 

numbers.Add(10);
numbers.Add(4);
numbers.Add(5);
numbers.Add(14);

System.Console.Clear();
//access items in array list 

System.Console.WriteLine("number at index 2 is " + numbers[2]);

numbers[2] = 99;
System.Console.WriteLine("number at index 2 is " + numbers[2]);


System.Console.WriteLine();
numbers.Insert(2, 88);

for (int i = 0; i < numbers.Count; i++)
{
    System.Console.WriteLine("number at index " + i + " is " + numbers[i]);
}
System.Console.WriteLine();

//  foreach(int item in numbers){
//     System.Console.WriteLine(item);

//  }

// deleting item from array list 
numbers.Remove(88);

numbers.Remove(0);

for (int i = 0; i < numbers.Count; i++)
{
    System.Console.WriteLine("numbers at index " + i + " is: " + numbers[i]);

}

System.Console.WriteLine();
// sorting items from array list
numbers.Sort();

for (int i = 0; i < numbers.Count; i++)
{
    System.Console.WriteLine("number at index" + i + " is: " + numbers[i]);
}

System.Console.WriteLine();
//searching item from array list 
System.Console.WriteLine("\n 99 is located at index " + numbers.BinarySearch(99));

System.Console.WriteLine();







